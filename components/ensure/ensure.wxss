/* components/xuzhi/xuzhi.wxss */
@import "../../static/css/common-content-dialog.wxss";
@import "../../animate.wxss";
@import "../../app.wxss";

.inner-content{
	padding: 0;
	padding: 0 40rpx;
}

.xuzhi-title-content{
	height: 114rpx;
	padding-top: 40rpx;
	padding-bottom: 30rpx;
	border-bottom: 2rpx solid #ECECEC;
	position: relative;
}
.btn-close-xuzhi{
	height: 100%;
	width: 100rpx;
	position: absolute;
	right: -40rpx;
	top: 2rpx;
	background-image: url(http://file.baozhixing.com/cancle@2x.png);
	background-repeat: no-repeat;
	background-size: 24rpx 24rpx;
	background-position:right 40rpx center;
}
.xuzhi-title{
	height: 44rpx;
	line-height: 44rpx;
	font-size:36rpx;
	color: #282828;
	display: flex;
}
.xuzhi-zhu{
	height: 30rpx;
	line-height: 30rpx;
	font-size:24rpx;
	color: #9E9E9E;
	display: flex;
}
.xuzhi-content-text{
	position: absolute;
	top: 114rpx;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	font-size:28rpx;
	line-height:44rpx;
	color: #636363;
	text-align: justify;
	overflow-y: scroll;
	-webkit-overflow-scrolling: touch;
}
.ensure-product-base-info-item{
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 2rpx solid #ECECEC;
}
.info-label{
	font-size: 32rpx;
	color: #282828;
}
.info-value{
	font-size: 28rpx;
	color: #636363;
}
.ensure-suport-item{
	padding: 30rpx 0;
	border-bottom: 2rpx solid #ECECEC;
}
.ensure-suport-item-title{
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	height: 40rpx;
	line-height: 40rpx;
	margin-bottom: 20rpx;
	font-size: 32rpx;
}
.ensure-suport-label{
	color: #282828;
}
.ensure-suport-value{
	color: #636363;
}



/* pages/my/my.wxss */
.my-container{
	background-color: #f5f5f5;
}
.my-top{
	width: 100%;
	position: relative;
	
}
.bg-orange{
	height: 200rpx;
	width: 100%;
	position: relative;
	background:linear-gradient(180deg,rgba(252,191,0,1) 0%,rgba(255,166,0,1) 100%)
}
.my-top-contianer{
	position: absolute;
	background-color: #fff;
	left: 40rpx;
	right: 40rpx;
	height:200rpx;
	top: 20rpx;
	border-radius:20rpx 20rpx 0 0;
}
.userInfo-content{
	width: 100%;
	padding: 40rpx 0 0 40rpx;
	display: flex;
	flex-flow: row nowrap;
	margin-bottom: 30rpx;
}
.portrait{
	height: 100rpx;
	width: 100rpx;
	border-radius: 50%;
}
.nick_content{
	margin-left: 40rpx;
	display: flex;
	align-items: center;
}
.nick_name{
	height: 52rpx;
	line-height: 52rpx;
	font-size: 32rpx;
	color: #282828;
	margin-bottom: 14rpx;
}
.vip_tap{
	height: 30rpx;
	line-height: 30rpx;
	font-size: 24rpx;
	color: #9e9e9e;
	position: relative;
	display: flex;
	flex-flow: row nowrap;
}
.renzheng{
	width: 35rpx;
	height: 100%;
	background-image: url(http://file.baozhixing.com/renzheng_icon.png);
	background-repeat: no-repeat;
	background-size: 25rpx 30rpx;
	background-position: left center;
}
.vip_tap::after{
	content: "";
	position: absolute;
	width: 10rpx;
    height: 10rpx;
    border-top: 4rpx solid #959595;
    border-right: 4rpx solid #959595;
    transform: rotate(45deg);
    right: 0rpx;
    top: 50%;
    margin-top:-8rpx; 
}
.user-meau{
	background-color: #fff;
	padding: 0 50rpx;
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
}

.user-meau-item{
	display: flex;
	flex-direction: column;
	width: 80rpx;
	align-items: center;
	position: relative;
}
.meau_icon{
	height: 80rpx;
	width: 80rpx;
	margin-bottom: 20rpx;
}
.meau_text{
	height: 34rpx;
	line-height: 34rpx;
	font-size: 28rpx;
	color: #282828;
}
.my-top-tag{
	position: absolute;
	top: 80rpx;
	right: 0;
	background-color: #FEAB00;
	width: 208rpx;
	height: 60rpx;
	border-radius: 30rpx 0 0 30rpx;
	z-index: 500;
	line-height: 60rpx;
	color: #FFFFFF;
	font-size: 24rpx;
	padding-left: 30rpx;
	background-image: url(http://file.baozhixing.com/%E8%BF%9E%E6%8E%A5.png);
	background-repeat: no-repeat;
	background-size: 24rpx 20rpx;
	background-position: right 40rpx center;
}

.ceshi_container{
	width: 100%;
	padding: 164rpx 40rpx 50rpx;

/*分类菜单*/
.classifie{
	width: 100%;
	position: relative;
	border-bottom:1rpx solid #ECECEC;
	background: #fff;
}

.classifie-page{
	padding-top: 20rpx;
}

.classif-parent{
	width: 670rpx;
	height: 52rpx;
	line-height: 52rpx;
	font-size:36rpx;
	color: #9E9E9E;
	white-space: nowrap;
	overflow-x: scroll;
	overflow-y: hidden;
	position: relative;
	margin-bottom: 10rpx;
	padding-right: 40rpx;
	margin-left: -4rpx;
}
.classif-item{
	margin-right: 36rpx;
	padding: 0 4rpx;
	position: relative;
}
.more-classif{
	position: absolute;
	height: 52rpx;
	width: 62rpx;
	right: 0;
	top: 0;
	background: linear-gradient(to right, rgba(255, 255, 255, 0.1) 5%, rgba(255, 255, 255, 1) 30%);
}
.zhankai{
	height: 100%;
	width: 100%;
	background-image: url(http://file.baozhixing.com/icon-zhankai@2x.png);
	background-repeat: no-repeat;
	background-size: 32rpx 32rpx;
	background-position: 25rpx 12rpx;
}
.classif-child{
	height: 94rpx;
	line-height: 94rpx;
	display: flex;
	white-space: nowrap;
	overflow-x: scroll;
	overflow-y: hidden;
	position: relative;
	padding-right: 40rpx;
}
.classif-child-item{
	display: flex;
	margin-right: 30rpx;
	position: relative;
	font-size: 28rpx;
	color: #9E9E9E;
}
.classif-child-item-active{
	color: #185DD0;
	position: relative;
}
.classif-child-item-active::after{
	content: "";
	position: absolute;
	width:14rpx;
	height:14rpx;
	left: 50%;
	bottom:10rpx;
	margin-left: -7rpx;
	background:rgba(255,187,0,0.67);
	border-radius:12rpx;
}
.classif-child-model{
	position: absolute;
	height: 94rpx;
	width: 40rpx;
	right: 0;
	bottom: 0;
	background: linear-gradient(to right, rgba(255, 255, 255, 0.1) 1%, rgba(255, 255, 255, 1) 30%);
}


/*轮播图*/
.swiper-container{
  position: relative;
  height: 280rpx;
}
.slider-container{
	height: 280rpx;
}
.swiper-item{
	border-radius: 20rpx;
	overflow: hidden;
	padding: 0 40rpx;
	height: 280rpx;
}
.slide-image{
	width: 100%;
	height: 100%;
	border-radius: 20rpx;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 6rpx;
  width: 10rpx;
  height: 10rpx;
  background: #fff;
  border-radius: 5rpx;
  transition: all 0s;
  opacity: 0.52;
}
.swiper-container .dots .dot.active{
  width: 20rpx;
  background: #fff;
  opacity: 1;
}


.weui-search-bar{
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	border:none!important;
	background: #fff;
	padding: 20rpx 40rpx 10rpx;
	z-index: 3000;
}
.weui-search-bar__form,.weui-search-bar__box{
	height: 70rpx;
	width: 100%;
	border:none!important;
}
.weui-search-bar__label{
	background: #F5F5F5!important;
	border-radius: 35rpx;
	line-height: 70rpx;
}
.weui-search-bar__box{
	background: #F5F5F5!important;
	border-radius: 35rpx;
	line-height: 70rpx;
}
.weui-search-bar__input{
	height: 70rpx;
	line-height: 70rpx;
	font-size: 28rpx;
}
.weui-search-bar__text{
	line-height: 70rpx;
}
.weui-search-bar__cancel-btn{
	line-height: 70rpx;
	color: #185DD0;
	font-size: 32rpx;
}
.weui-search-bar__box{
	padding: 0 40rpx;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
    padding-top: 100rpx;
}
.searchbar-result:before{
    display: none;
}

.text-search{
	font-size: 32rpx;
	color: #636363;
}
.weui-cells:after{
	border-bottom: 2rpx solid #ECECEC;
	left: 40rpx;
	right: 40rpx;
}
.weui-cell::before{
	content:"";
	right: 40rpx;
	left: 40rpx;
	border-top:none;
	border-bottom: 2rpx solid #ECECEC;
}
.weui-cell {
	padding: 0 40rpx;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 32rpx;
}
.weui-cell_active{
	background-color: #f5f5f5;
}

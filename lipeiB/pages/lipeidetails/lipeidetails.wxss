/* pages/lipeidetails/lipeidetails.wxss */
@import "../lipeiinputinfo/lipeiinputinfo"
.lipei-detils{
	background-color: #f5f5f5;
}
.lipei-pro{
	background-color: #fff;
	padding: 40rpx 40rpx 30rpx;
}
.product-info{
	display: flex;
	flex-direction: column;
	margin-bottom: 30rpx;
}
.ticket{
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
}
.productName{
	font-size:40rpx;
	line-height:40rpx;
	margin-bottom: 30rpx;
}
.ticket_no{
	color: #636363;
	font-size: 32rpx;
	line-height:40rpx;
}
.fuzhi_ticket{
	font-size: 24rpx;
	line-height:40rpx;
	color: #FFA600;
}
.jidu-content{
	position: relative;
}
.jidu-item{
	padding-left: 40rpx;
	display: flex;
	flex-flow: column nowrap;
	margin-bottom: 40rpx;
}
.jidu-item:last-child{
	margin-bottom:0;
}
.jidu-item-title{
	color: #9E9E9E;
	font-size: 28rpx;
	margin-bottom: 10rpx;
	line-height: 34rpx;
}
.jidu-item-text{
	color: #9E9E9E;
	font-size: 24rpx;
	line-height: 30rpx;
}
.dot-common{
	position: relative;
}
.dot-common::after{
	content: "";
	position: absolute;
	height: 20rpx;
	width: 20rpx;
	border-radius: 50%;
	background-color: #ECECEC;
	top: 8rpx;
	left: 0;
}
.dot-active::after{
	content: "";
	position: absolute;
	height: 20rpx;
	width: 20rpx;
	border-radius: 50%;
	background-color: #FFA600;
	top: 8rpx;
	left: 0;
}
.jidu-content::after{
	content:"";
	position: absolute;
	top: 28rpx;
	bottom: 90rpx;
	width: 2rpx;
	left: 10rpx;
	background-color: #ececec;
}
.weitongguo .jidu-item-title{
	color: #F43C3C;
}
.weitongguo .jidu-item-text{
	color: #282828;
}
.form-content{
	margin-top: 20rpx;
}

.lipei-details-footer{
	background-color: #fff;
	padding: 20rpx 40rpx 20rpx;
}
.call-phone{
	font-size: 24rpx;
	line-height: 30rpx;
	color: #636363;
	margin-bottom: 40rpx;
}
.telPhone{
	color: #185DD0;
}
.footer-options{
	display: flex;
	flex-flow: row nowrap;
	justify-content: flex-end;
}
.chexiao,.resetlipei{
	height: 54rpx;
	line-height: 54rpx;
	width: 172rpx;
	text-align: center;
	font-size: 28rpx;
}
.chexiao{
	border:2rpx solid #9E9E9E;
	border-radius: 27rpx;
	color: #9E9E9E;
	margin-right: 30rpx;
}
.resetlipei{
	border:2rpx solid #FFA600;
	border-radius: 27rpx;
	color: #FFA600;
}
.lipeijine{
	font-size: 32rpx;
}
.lipei-price{
	color: #F43C3C;
}



